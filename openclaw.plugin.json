{
  "id": "slimclaw",
  "name": "SlimClaw",
  "version": "0.1.0",
  "description": "Inference optimization middleware â€” windowing, routing, caching (60-80% token savings)",
  "entry": "./dist/index.js",
  "configSchema": {
    "type": "object",
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "metrics": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "logLevel": {
            "type": "string",
            "enum": ["silent", "summary", "verbose"],
            "default": "summary"
          }
        },
        "additionalProperties": false
      },
      "cacheBreakpoints": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "minContentLength": {
            "type": "number",
            "default": 1000
          },
          "provider": {
            "type": "string",
            "enum": ["anthropic"],
            "default": "anthropic"
          }
        },
        "additionalProperties": false
      },
      "dashboard": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": false
          },
          "port": {
            "type": "number",
            "default": 3333
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}
